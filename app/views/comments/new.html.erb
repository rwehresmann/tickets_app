<%= turbo_frame_tag 'new_comment' do %>
  <h2>New Comment</h2>

  <%= form_with(
    model: [@ticket, @comment], 
    local: true,
    data: {
      controller: 'reset_form',
      action: 'turbo:submit-end->reset_form#reset',
    }
  ) do |form| %>
    <div class="field">
      <%= form.rich_text_area :content %>
    </div>

    <%= form.submit 'Post', 'data-reset_form-target': 'button' %>
  <% end %>
<% end %>